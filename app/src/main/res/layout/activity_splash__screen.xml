<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UserInterface.Splash_Screen">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/iv_log"
                android:layout_above="@id/texlogo"
                android:src="@drawable/theer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="bottom"
                android:id="@+id/texlogo"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="THEERTHA EARTH \n MOVERS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </FrameLayout>

        <ProgressBar
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/pb_splash"
            style="@android:style/Widget.Holo.Light.ProgressBar.Inverse"
            android:layout_below="@id/texlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>



</RelativeLayout>