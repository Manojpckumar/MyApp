<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_back"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.theerthamovers.CustomViews.CustomTextView
                android:id="@+id/ced_vlogo"
                android:layout_width="50dp"
                android:textAllCaps="true"
                android:text="H"
                android:background="@drawable/spinner_back"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_height="50dp"/>

            <com.example.theerthamovers.CustomViews.CustomTextView
                android:id="@+id/ced_vname"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@color/violet"
                android:text="Hitachi"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_deleteveh"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_red_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.theerthamovers.CustomViews.CustomTextView
                android:id="@+id/ced_vcate"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Hitachi"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_height="wrap_content"/>

            <com.example.theerthamovers.CustomViews.CustomTextView
                android:id="@+id/ced_vmodel"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Hitachi"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.theerthamovers.CustomViews.CustomTextView
                android:id="@+id/ced_vnum"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:text="Hitachi"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>