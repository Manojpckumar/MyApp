<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="10dp"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_back"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.theerthamovers.CustomViews.CustomTextView
                    android:id="@+id/ctv_statuss"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

               <LinearLayout
                   android:id="@+id/ll_bill"
                   android:layout_alignParentEnd="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

<!--                   <com.example.theerthamovers.CustomViews.CustomTextView-->
<!--                       android:id="@+id/ctv_id"-->
<!--                       android:textSize="18sp"-->
<!--                       android:textColor="@color/black"-->
<!--                       android:layout_width="wrap_content"-->
<!--                       android:layout_height="wrap_content"/>-->

                   <com.example.theerthamovers.CustomViews.CustomTextView
                       android:id="@+id/ctv_bill_stat"
                       android:textSize="18sp"
                       android:textColor="@color/black"
                       android:text="Generate Bill"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

                   <ImageView
                       android:id="@+id/iv_bill_stat"
                       android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>


               </LinearLayout>



            </RelativeLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:text="Driver Name :"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:id="@+id/ctv_driname"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:text="Date :"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:id="@+id/ctv_wdate"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:text="Vehicle Name :"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:id="@+id/ctv_vhname"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:text="Place :"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:id="@+id/ctv_wplace"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:elevation="20dp"
                android:id="@+id/ll_buttons"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="5dp"
                    android:background="@drawable/spinner_back"
                    android:gravity="center"
                    android:id="@+id/ll_client_bill"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:text="CLIENT BILL"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/iv_client_bill"
                        android:src="@drawable/ic_cloud_download_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/spinner_back"
                    android:gravity="center"
                    android:id="@+id/ll_admin_bill"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:id="@+id/ctv_admin_bill"
                        android:text="GENERATE BILL"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/iv_admin_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>