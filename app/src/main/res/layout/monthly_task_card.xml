<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:paddingTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ctv_tot_amount"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="18sp"
                    android:textColor="@color/blu"
                    android:textStyle="bold"
                    android:text="â‚¹ 5,400/- "
                    android:background="@drawable/monthly_work_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>

                <com.example.theerthamovers.CustomViews.CustomTextView
                    android:id="@+id/ctv_wo_date"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_alignParentLeft="true"
                    android:textSize="18sp"
                    android:textColor="@color/blu"
                    android:textStyle="bold"
                    android:text="20/06/2020"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.example.theerthamovers.CustomViews.CustomTextView
                    android:id="@+id/ctv_veh_num"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_alignParentEnd="true"
                    android:textSize="18sp"
                    android:textColor="@color/blu"
                    android:textStyle="bold"
                    android:text="HITACHI UP DOWN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.example.theerthamovers.CustomViews.CustomTextView
                    android:id="@+id/ctv_ope_name"
                    android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:textColor="@color/blu"
                android:textStyle="bold"
                android:text="HITACHI UP DOWN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                <com.example.theerthamovers.CustomViews.CustomTextView
                    android:id="@+id/ctv_locat"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/blu"
                    android:textStyle="bold"
                    android:text="HITACHI UP DOWN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:elevation="20dp"
                android:id="@+id/ll_buttons"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="5dp"
                    android:background="@drawable/spinner_back"
                    android:gravity="center"
                    android:id="@+id/ll_genclient"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:text="CLIENT BILL"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/iv_client_bill"
                        android:src="@drawable/ic_cloud_download_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/spinner_back"
                    android:gravity="center"
                    android:id="@+id/ll_genadmin"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.theerthamovers.CustomViews.CustomTextView
                        android:id="@+id/ctv_admin_bill"
                        android:text="ADMIN BILL"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/iv_admin_bill"
                        android:src="@drawable/ic_cloud_download_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:src="@drawable/ic_directions_bus_black_24dp"
        app:layout_anchor="@+id/card"
        app:layout_anchorGravity="top|center"
        android:id="@+id/fab"
        android:backgroundTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>