<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/transparent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:elevation="10dp"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@drawable/fetch_op_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_operator"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.example.theerthamovers.CustomViews.CustomTextView
                    android:id="@+id/ctv_name"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Sreerag M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_delete_red_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>


            <com.example.theerthamovers.CustomViews.CustomTextView
                android:id="@+id/ctv_phone"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="+91 9562719658"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_whatsapp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/ic_whatsapp"
                android:layout_width="30dp"
                android:layout_height="match_parent"/>

            <com.example.theerthamovers.CustomViews.CustomTextView
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="WhatsApp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_phone"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/ic_phone"
                android:layout_width="30dp"
                android:layout_height="match_parent"/>

            <com.example.theerthamovers.CustomViews.CustomTextView
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


        </LinearLayout>






    </LinearLayout>

</LinearLayout>



</LinearLayout>