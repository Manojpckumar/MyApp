<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/nointernet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/ash"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/no_net"/>

    </androidx.cardview.widget.CardView>

    <com.example.theerthamovers.CustomViews.CustomTextView
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/red"
        android:text="No Internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.theerthamovers.CustomViews.CustomTextView
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="No Internet Connection Please Try Again"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.example.theerthamovers.CustomViews.CustomButton
        android:id="@+id/cbn_reload"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_back_register"
        android:text="Reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
/>
</LinearLayout>