<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="5"
    android:id="@+id/ll_enterphone"
    android:background="@color/blu"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.EnterMobileNumber">

    <LinearLayout
        android:gravity="center"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:tint="@color/white"
            android:src="@drawable/ic_sms_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.theerthamovers.CustomViews.CustomTextView
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingBottom="40dp"
            android:paddingRight="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/whi"
            android:text="We will send you a One Time Password to your registered mobile number for further verifiation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="4"
        android:background="@drawable/otpback"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.theerthamovers.CustomViews.CustomTextView
            android:paddingTop="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/violet"
            android:text="India (+91)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <LinearLayout
            android:paddingTop="30dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <com.example.theerthamovers.CustomViews.CustomEditText
                android:gravity="center"
                android:id="@+id/ced_mobilenum"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/violet"
                android:background="@drawable/otpeditback"
                android:textSize="25sp"
                android:inputType="phone"
                android:hint="Enter Mobile Number"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>


        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:layout_marginTop="25sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <com.example.theerthamovers.CustomViews.CustomButton
            android:text="Continue"
            android:id="@+id/cbn_continue"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/otpbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>