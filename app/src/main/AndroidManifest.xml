<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.theerthamovers">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Theertha Earth Movers"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".UserInterface.UpdatePasswordScreen"></activity>
        <activity android:name=".UserInterface.VerifyOtpScreen" />
        <activity android:name=".UserInterface.EnterMobileNumber" />
        <activity android:name=".TestScreen" />
        <activity android:name=".Admin_module.Admin_Login" />
        <activity
            android:name=".User_Module.User_Home_Page"
            android:label="@string/title_activity_user__home__page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Admin_module.Admin_Home"
            android:label="@string/title_activity_admin__home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UserInterface.Splash_Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".User_Module.LogIn_Page" />
        <activity android:name=".User_Module.Register_Page" />
        <activity
            android:name=".NoInternet"
            android:noHistory="true" />

        <receiver android:name=".Network.MyReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>